{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/chaincodechd/privado-id-vc-schema/main/schemas/json-ld/jobcard-v1.jsonld",
      "jsonSchema": "https://raw.githubusercontent.com/chaincodechd/privado-id-vc-schema/main/schemas/json/JobCard-v1.json"
    },
    "version": "1.0",
    "type": "JobCard"
  },
  "description": "Worker's job card schema",
  "title": "JobCard",
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": {
      "type": ["string", "array", "object"]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "required": ["id"],
      "properties": {
        "id": {
          "format": "uri",
          "type": "string"
        }
      }
    },
    "issuanceDate": {
      "format": "date-time",
      "type": "string"
    },
    "expirationDate": {
      "format": "date-time",
      "type": "string"
    },
    "credentialSchema": {
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      },
      "required": ["id", "type"],
      "type": "object"
    },
    "subjectPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "revNonce": {
      "type": "integer"
    },
    "version": {
      "type": "integer"
    },
    "updatable": {
      "type": "boolean"
    },
    "credentialSubject": {
      "description": "Stores the data of the credential",
      "title": "Credential subject",
      "properties": {
        "id": {
          "description": "Stores the DID of the subject that owns the credential",
          "title": "Credential subject ID",
          "format": "uri",
          "type": "string"
        },
        "workerId": {
          "description": "Worker ID",
          "title": "Worker ID",
          "type": "string"
        },
        "jobTitle": {
          "description": "Job Title",
          "title": "Job Title",
          "type": "string"
        },
        "dateOfJoining": {
          "description": "Date of Joining",
          "title": "Date of Joining",
          "format": "date",
          "type": "string"
        },
        "payLevel": {
          "description": "Pay Level",
          "title": "Pay Level",
          "type": "string"
        },
        "numberOfFamilyMembers": {
          "description": "Number of Family Members",
          "title": "Number of Family Members",
          "type": "integer"
        },
        "govBenefitsEligibility": {
          "description": "Gov Benefits Eligibility",
          "title": "Gov Benefits Eligibility",
          "type": "string"
        }
      },
      "required": [
        "workerId",
        "jobTitle",
        "dateOfJoining",
        "payLevel",
        "numberOfFamilyMembers",
        "govBenefitsEligibility"
      ],
      "type": "object"
    },
    "credentialStatus": {
      "description": "Allows the discovery of information about the current status of the credential, such as whether it is suspended or revoked.",
      "title": "Credential Status",
      "properties": {
        "id": {
          "description": "Id URL of the credentialStatus.",
          "title": "Id",
          "format": "uri",
          "type": "string"
        },
        "type": {
          "description": "Expresses the credential status type (method). The value should provide enough information to determine the current status of the credential.",
          "title": "Type",
          "type": "string"
        }
      },
      "required": ["id", "type"],
      "type": "object"
    }
  }
}
