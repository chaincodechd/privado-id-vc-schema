{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/chaincodechd/privado-id-vc-schema/main/schemas/json-ld/jobcard-v1.jsonld",
      "jsonSchema": "https://raw.githubusercontent.com/chaincodechd/privado-id-vc-schema/main/schemas/json/JobCard-v1.json"
    },
    "version": "1.0",
    "type": "JobCard"
  },
  "description": "Job Card schema for Workers",
  "title": "Job Card",
  "properties": {
    "credentialSubject": {
      "description": "Stores the data of the credential",
      "title": "Credential subject",
      "type": "object",
      "properties": {
        "id": {
          "description": "Stores the DID of the subject that owns the credential.",
          "title": "Credential subject ID",
          "format": "uri",
          "type": "string"
        },
        "Reg_No": {
          "description": "Unique identifier assigned during registration.",
          "title": "Registration Number",
          "type": "string"
        },
        "State_Code": {
          "description": "State Code.",
          "title": "State Code",
          "type": "string"
        },
        "District_Code": {
          "description": "District Code.",
          "title": "District Code",
          "type": "string"
        },
        "Block_Code": {
          "description": "Block Code.",
          "title": "Block Code",
          "type": "string"
        },
        "Panchayat_Code": {
          "description": "Panchayat Code (from JobCardDto, numeric string).",
          "title": "Panchayat Code",
          "type": "string"
        },
        "Village_Code": {
          "description": "Village Code.",
          "title": "Village Code",
          "type": "string"
        },
        "Family_Id": {
          "description": "Family ID.",
          "title": "Family ID",
          "type": "string"
        },
        "Head_of_Household": {
          "description": "Name of the family head.",
          "title": "Head of Household",
          "type": "string"
        },
        "Father_or_Husband_Name": {
          "description": "Father or Husband's Name.",
          "title": "Father or Husband Name",
          "type": "string"
        },
        "House_No": {
          "description": "House Number.",
          "title": "House Number",
          "type": "string"
        },
        "Caste": {
          "description": "Caste.",
          "title": "Caste",
          "type": "string"
        },
        "Registration_Date": {
          "description": "Registration Date.",
          "title": "Registration Date",
          "type": "string"
        },
        "job_card_iss": {
          "description": "Job card issuance status/details.",
          "title": "Job Card Issuance",
          "type": "string"
        },
        "dt_job_card_iss": {
          "description": "Date of job card issuance.",
          "title": "Date of Job Card Issuance",
          "type": "string"
        },
        "Is_JC_verified_new": {
          "description": "Job card verification status (new).",
          "title": "Is JC Verified (New)",
          "type": "string"
        },
        "FRA_Beneficiary": {
          "description": "Forest Rights Act Beneficiary status.",
          "title": "FRA Beneficiary",
          "type": "string"
        },
        "Regn_Entry_Date": {
          "description": "Registration Entry Date.",
          "title": "Registration Entry Date",
          "type": "string"
        },
        "Event_Flag": {
          "description": "Event Flag.",
          "title": "Event Flag",
          "type": "string"
        },
        "Event_Reason": {
          "description": "Event Reason.",
          "title": "Event Reason",
          "type": "string"
        },
        "Event_Date": {
          "description": "Event Date.",
          "title": "Event Date",
          "type": "string"
        },
        "Family_Photo_Hash": {
          "description": "Family Photo Hash.",
          "title": "Family Photo Hash",
          "type": "string"
        },
        "Applicants": {
          "description": "Array of applicants associated with the job card.",
          "title": "Applicants",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "Reg_No": {
                "type": "string",
                "description": "Applicant's Registration Number."
              },
              "Applicant_No": {
                "type": "integer",
                "description": "Applicant's Number (numeric string)."
              },
              "Applicant_Name": {
                "type": "string",
                "description": "Applicant's Name."
              },
              "Gender": {
                "type": "string",
                "description": "Applicant's Gender."
              },
              "Age": {
                "type": "integer",
                "description": "Applicant's Age."
              },
              "Ac_No": {
                "type": "string",
                "description": "Applicant's Account Number."
              },
              "BPL_Data": {
                "type": "string",
                "description": "Applicant's BPL Data status."
              },
              "Disabled": {
                "type": "string",
                "description": "Applicant's Disability status."
              },
              "Relation_code": {
                "type": "integer",
                "description": "Applicant's Relation Code to Head of Household."
              },
              "Mobile_No": {
                "type": "string",
                "description": "Applicant's Mobile Number."
              },
              "Name_as_per_Aadhar": {
                "type": "string",
                "description": "Applicant's Name as per Aadhaar."
              },
              "Active4": {
                "type": "integer",
                "description": "Activity status indicator 4."
              },
              "Active3": {
                "type": "integer",
                "description": "Activity status indicator 3."
              },
              "Active2": {
                "type": "integer",
                "description": "Activity status indicator 2."
              },
              "Active1": {
                "type": "integer",
                "description": "Activity status indicator 1."
              },
              "App_Reg_date": {
                "type": "string",
                "description": "Applicant's Registration Date."
              },
              "UID_Enc_Cipher": {
                "type": "string",
                "description": "Encrypted UID Cipher."
              },
              "UID_NIC_DemoAuth": {
                "type": "string",
                "description": "UID NIC Demographic Authentication status."
              },
              "is_abps_enabled": {
                "type": "string",
                "description": "Aadhaar Based Payment System enabled status."
              },
              "Event_Flag": {
                "type": "string",
                "description": "Applicant-specific Event Flag."
              },
              "Event_Reason": {
                "type": "string",
                "description": "Applicant-specific Event Reason."
              },
              "Event_Date": {
                "type": "string",
                "description": "Applicant-specific Event Date."
              },
              "App_Name_BankPO": {
                "type": "string",
                "description": "Applicant's Name as per Bank/Post Office."
              },
              "Photo_Hash": {
                "type": "string",
                "description": "Applicant's Photo Hash."
              }
            },
            "required": [
              "Reg_No",
              "Applicant_No",
              "Applicant_Name",
              "Gender",
              "Age",
              "Ac_No",
              "BPL_Data",
              "Disabled",
              "Relation_code",
              "Mobile_No",
              "Name_as_per_Aadhar",
              "App_Reg_date",
              "UID_Enc_Cipher",
              "UID_NIC_DemoAuth",
              "is_abps_enabled",
              "Event_Flag",
              "Event_Reason",
              "Event_Date",
              "App_Name_BankPO",
              "Photo_Hash"
            ]
          }
        }
      },
      "required": [
        "Reg_No",
        "State_Code",
        "District_Code",
        "Block_Code",
        "Panchayat_Code",
        "Village_Code",
        "Family_Id",
        "Head_of_Household",
        "Father_or_Husband_Name",
        "House_No",
        "Caste",
        "Registration_Date",
        "job_card_iss",
        "dt_job_card_iss",
        "Is_JC_verified_new",
        "FRA_Beneficiary",
        "Regn_Entry_Date",
        "Event_Flag",
        "Event_Reason",
        "Event_Date",
        "Family_Phot_Hash",
        "Applicants"
      ]
    },
    "@context": {
      "type": ["string", "array", "object"]
    },
    "expirationDate": {
      "format": "date-time",
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "issuanceDate": {
      "format": "date-time",
      "type": "string"
    },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "properties": {
        "id": {
          "format": "uri",
          "type": "string"
        }
      },
      "required": ["id"]
    },
    "type": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "credentialSchema": {
      "properties": {
        "id": {
          "format": "uri",
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": ["id", "type"],
      "type": "object"
    },
    "credentialStatus": {
      "description": "Allows the discovery of information about the current status of the credential, such as whether it is suspended or revoked.",
      "title": "Credential Status",
      "properties": {
        "id": {
          "description": "Id URL of the credentialStatus.",
          "title": "Id",
          "format": "uri",
          "type": "string"
        },
        "type": {
          "description": "Expresses the credential status type (method). The value should provide enough information to determine the current status of the credential.",
          "title": "Type",
          "type": "string"
        }
      },
      "required": ["id", "type"],
      "type": "object"
    },
    "subjectPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "revNonce": {
      "type": "integer"
    },
    "version": {
      "type": "integer"
    },
    "updatable": {
      "type": "boolean"
    }
  },
  "required": [
    "credentialSubject",
    "@context",
    "id",
    "issuanceDate",
    "issuer",
    "type",
    "credentialSchema"
  ],
  "type": "object"
}
